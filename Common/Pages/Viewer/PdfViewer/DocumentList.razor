        <GridEvents CommandClicked="CommandClick" TValue="Data"></GridEvents>
            <GridColumns>
                <GridColumn HeaderText="File Name">
                    <Template>
                        <div>
                            @if (context is Data data)
                            {
                                <div class="file-name-container">
                                    <div class="file-name-content">
                                        <div class="icon-and-text">
