@page "/pdf-viewer/document-list"

@using Syncfusion.Blazor.Popups;
@using Syncfusion.Blazor.Grids;
@using Syncfusion.Blazor.SfPdfViewer;
@inject NavigationManager NavigationManager
@*Hidden:Lines*@
@inherits SampleBaseComponent
@*End:Hidden*@

